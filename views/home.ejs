<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>URL GENARATE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <h1>URL Shortner</h1>
        <% if (locals.id) { %>
            <p> URL Genarate: http://localhost:8000/url/<%=id %></p>
        <%} %>
        <form method="POST" action="/url">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Enter Your orginal URL</label>
                <input type="text" class="form-control" name="url" placeholder="http://www.example.com">
                
            </div>
            <button type="submit" class="btn btn-primary">Genarate</button>
        </form>
        <% if (locals.urls) { %>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">S.NO</th>
                    <th scope="col">shortURL</th>
                    <th scope="col">redirectURL</th>
                    <th scope="col">clicks</th>
                  </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url,index) => { %>
                        <tr> 
                            <td><%= index + 1 %></td>
                            <td><%= url.shortId %></td>
                            <td><%= url.redirectURL %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                  
                </tbody>
              </table>
        <%} %>
        
  </body>
</html>